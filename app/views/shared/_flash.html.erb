<% if flash[:success] %>
    <div class="flash-success">
      <span><%= flash[:success] %></span>
    </div>
<% end %>

<% if flash[:error] %>
    <div class="flash-error">
      <span><%= flash[:error] %></span>
    </div>
<% end %>

<% if flash[:notice] %>
    <div class="flash-notice">
      <span><%= flash[:notice] %></span>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class="flash-alert">
      <span><%= flash[:alert] %></span>
    </div>
<% end %>
