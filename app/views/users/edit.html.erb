<% content_for :title, user_name(current_user) %>
<%= simple_form_for @user, url: user_path do |f| %>
    <%= f.input :email, placeholder: "Email Address", error_prefix: "Email" %>
    <%= f.input :first_name, placeholder: "First Name", error_prefix: "First Name" %>
    <%= f.input :last_name, placeholder: "Last Name", error_prefix: "Last Name" %>
    <%= f.input :password, placeholder: "Password", error_prefix: "Password" %>
    <%= f.submit %>
<% end %>

